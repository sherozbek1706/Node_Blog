<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ADMIN DASHBOARD</title>
  <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Open Sans:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="/css/styles.css" rel="stylesheet" />
  <style>
    *{
      margin: 0;
      padding: 0;
      text-decoration: none;
      font-family: "Open Sans";
    }
    .container{

    }
  </style>
</head>
<h1 class="text-center my-5">ADMIN DASHBOARD</h1>
<svg  xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </symbol>
  </svg>
  <div class="conatiner">
    @if(Posts.length > 0)
      @each((post, index) in Posts)
        <form action="/delete/{{post._id}}" method="POST" class="w-lg">
          <div class="alert alert-dark rounded d-flex align-items-center justify-content-between my-4 mx-4" role="alert">
            {{index + 1}} - {{post.title}} 
            <button class="btn btn-danger  mx-4 rounded" type="submit">Delete</button>
          </div>
        </form>
      @endeach 
    @else
    <div class="alert alert-dark rounded d-flex align-items-center justify-content-center my-4 mx-4"  role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
      <div>
        HOZIRDA HECH QANDAY POST YO'Q     </div>
    </div>
    @endif
    <a href="/">
      <button class="d-block m-auto btn btn-secondary rounded text-center">Home</button>
    </a>
  </div>
</body>
</html>